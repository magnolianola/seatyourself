<h1>Edit a Reservation</h1>

<p>
	<%= link_to "Back", restaurant_reservations_path %>
</p>

<%= form_for([@restaurant, @reservation]) do |f| %>


	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">		
		<%= f.datetime_select :booking_time  %>
		
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>